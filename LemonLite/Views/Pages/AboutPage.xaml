<Page x:Class="LemonLite.Views.Pages.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:base="clr-namespace:LemonLite.Utils"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:LemonLite.Views.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ws="https://schemas.elecho.dev/wpfsuite"
      Title="AboutPage"
      d:DataContext="{d:DesignInstance local:AboutPage}"
      d:DesignHeight="687.661"
      d:DesignWidth="800"
      Foreground="{DynamicResource ForeColor}"
      mc:Ignorable="d">

    <base:ScrollViewer Padding="12,0" Style="{DynamicResource SimpleVerticalScrollViewerStyle}">
        <ws:StackPanel Margin="0,20,0,20" Spacing="20">
            <!--  App Info Header  -->
            <Border Padding="32,40"
                    Background="{DynamicResource MaskColor}"
                    CornerRadius="16">
                <ws:StackPanel HorizontalAlignment="Center" Spacing="16">
                    <!--  App Icon  -->
                    <Image Width="80"
                           Height="80"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           Source="/Resources/icon.ico" />

                    <!--  App Name  -->
                    <TextBlock HorizontalAlignment="Center"
                               FontSize="32"
                               FontWeight="SemiBold"
                               Text="{Binding AppName}"
                               TextAlignment="Center" />

                    <!--  Version  -->
                    <TextBlock HorizontalAlignment="Center"
                               FontSize="16"
                               Opacity="0.7"
                               Text="{Binding AppVersion}"
                               TextAlignment="Center" />

                    <!--  Description  -->
                    <TextBlock MaxWidth="400"
                               Margin="0,8,0,0"
                               HorizontalAlignment="Center"
                               FontSize="14"
                               Opacity="0.6"
                               Text="{Binding Description}"
                               TextAlignment="Center"
                               TextWrapping="Wrap" />

                    <!--  Publisher  -->
                    <ws:StackPanel HorizontalAlignment="Center"
                                   Orientation="Horizontal"
                                   Spacing="4">
                        <TextBlock Opacity="0.6" Text="Published by" />
                        <TextBlock FontWeight="Medium" Text="{Binding Publisher}" />
                    </ws:StackPanel>

                    <!--  Copyright  -->
                    <TextBlock Margin="0,8,0,0"
                               HorizontalAlignment="Center"
                               FontSize="12"
                               Opacity="0.5"
                               Text="{Binding CopyrightYear}"
                               TextAlignment="Center" />

                    <!--  GitHub Button  -->
                    <ws:Button Margin="0,16,0,0"
                               Padding="16,10"
                               HorizontalAlignment="Center"
                               Command="{Binding OpenGitHubCommand}"
                               Style="{StaticResource AccentButtonStyleForWs}">
                        <TextBlock>
                            <Run BaselineAlignment="Center"
                                 FontFamily="{StaticResource SegoeFluentIcon}"
                                 Text="&#xE8A7;" />
                            <Run Text="  View on GitHub" />
                        </TextBlock>
                    </ws:Button>
                </ws:StackPanel>
            </Border>

            <!--  Open Source Components  -->
            <ws:StackPanel Spacing="12">
                <TextBlock Margin="0,8,0,0"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Text="Open Source Components" />

                <Border Padding="16"
                        Background="{DynamicResource MaskColor}"
                        CornerRadius="12">
                    <ItemsControl ItemsSource="{Binding OpenSourceComponents}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,4"
                                        Padding="12,12"
                                        Background="Transparent"
                                        CornerRadius="8"
                                        Cursor="Hand">
                                    <Border.InputBindings>
                                        <MouseBinding Command="{Binding DataContext.OpenUrlCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                      CommandParameter="{Binding Url}"
                                                      MouseAction="LeftClick" />
                                    </Border.InputBindings>
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="{DynamicResource FocusMaskColor}" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <ws:StackPanel Grid.Column="0" Spacing="4">
                                            <TextBlock FontSize="15"
                                                       FontWeight="Medium"
                                                       Text="{Binding Name}" />
                                            <TextBlock Opacity="0.6">
                                                <Run Text="Version" />
                                                <Run Text="{Binding Version}" />
                                                <Run Text=" • " />
                                                <Run Text="License: " />
                                                <Run Text="{Binding License}" />
                                            </TextBlock>
                                        </ws:StackPanel>

                                        <TextBlock Grid.Column="1"
                                                   Margin="8,0,0,0"
                                                   VerticalAlignment="Center"
                                                   FontFamily="{StaticResource SegoeFluentIcon}"
                                                   FontSize="14"
                                                   Opacity="0.5"
                                                   Text="&#xE8A7;" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>
            </ws:StackPanel>

            <!--  Additional Info  -->
            <Border Padding="20"
                    Background="{DynamicResource MaskColor}"
                    CornerRadius="12">
                <ws:StackPanel HorizontalAlignment="Center" Spacing="8">
                    <TextBlock HorizontalAlignment="Center"
                               FontSize="14"
                               Opacity="0.6"
                               TextAlignment="Center">
                        <Run Text="Built with" />
                        <Run Foreground="OrangeRed" Text="❤️" />
                        <Run Text="using .NET 8 and WPF" />
                    </TextBlock>
                    <TextBlock HorizontalAlignment="Center"
                               FontSize="14"
                               Opacity="0.6"
                               Text="Thank you for using LemonLite!"
                               TextAlignment="Center" />
                </ws:StackPanel>
            </Border>
        </ws:StackPanel>
    </base:ScrollViewer>
</Page>
