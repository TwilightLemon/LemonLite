<Page x:Class="LemonLite.Views.Pages.AudioVisualizerSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:base="clr-namespace:LemonLite.Utils"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:LemonLite.Views.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ws="https://schemas.elecho.dev/wpfsuite"
      Title="AudioVisualizerSettingsPage"
      d:DataContext="{d:DesignInstance local:AudioVisualizerSettingsPage}"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Foreground="{DynamicResource ForeColor}"
      mc:Ignorable="d">

    <base:ScrollViewer Padding="12,0" Style="{DynamicResource SimpleVerticalScrollViewerStyle}">
        <ws:StackPanel x:Name="SettingsList" Spacing="8">
            <TextBlock Margin="0,8"
                       FontSize="22"
                       Text="Audio Visualizer Settings" />

            <Border Height="48"
                    Background="{DynamicResource MaskColor}"
                    CornerRadius="12">
                <ToggleButton Margin="12,0,12,0"
                              Content="Enable Border Rendering"
                              IsChecked="{Binding EnableBorderRendering}"
                              Style="{DynamicResource RoundToggleButtonStyle}" />
            </Border>

            <Border Height="48"
                    Background="{DynamicResource MaskColor}"
                    CornerRadius="12">
                <ToggleButton Margin="12,0,12,0"
                              Content="Enable Strips Rendering"
                              IsChecked="{Binding EnableStripsRendering}"
                              Style="{DynamicResource RoundToggleButtonStyle}" />
            </Border>

            <Border Height="48"
                    Background="{DynamicResource MaskColor}"
                    CornerRadius="12">
                <Grid>
                    <TextBlock Margin="12,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Text="Opacity" />
                    <ws:StackPanel Margin="0,0,24,0"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   Orientation="Horizontal"
                                   Spacing="8">
                        <Slider Width="150"
                                VerticalAlignment="Center"
                                Maximum="1"
                                Minimum="0"
                                Style="{StaticResource FluentSliderStyle}"
                                Value="{Binding WindowOpacity}" />
                        <TextBlock Width="35"
                                   VerticalAlignment="Center"
                                   Text="{Binding WindowOpacity, StringFormat={}{0:P0}}" />
                    </ws:StackPanel>
                </Grid>
            </Border>
        </ws:StackPanel>
    </base:ScrollViewer>
</Page>
