<Window x:Class="LemonLite.Views.Windows.AudioVisualizerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:LemonLite.Views.Windows"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vwpf="clr-namespace:LibAudioVisualizer.WPF;assembly=LibAudioVisualizer.WPF"
        Title="AudioVisualizerWindow"
        Width="800"
        Height="450"
        AllowsTransparency="True"
        Background="{x:Null}"
        IsHitTestVisible="False"
        Opacity="0.6"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        WindowState="Maximized"
        WindowStyle="None"
        mc:Ignorable="d">
    <Grid>
        <!--<Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>-->
        <vwpf:RealtimeAudioVisualizerPresenter x:Name="visualizerControl"
                                               ColorGradientOffset=".1"
                                               EnableBorderRendering="False"
                                               EnableCircleStripsRendering="False"
                                               EnableCurveRendering="False"
                                               EnableStripsRendering="True"
                                               RenderEnabled="True"
                                               SpectrumBlurry="0"
                                               StripSpacing="0.4" />
    </Grid>
</Window>
